    <!-- Copy in a card from Bootstrap -->
    <!-- Put the card in an EJS for loop and dynamically plug in your values -->
    <h4></h4>
      <div class="container">
       <div class="row">
    <% for (let i = 0; i < data.length; i++) { %>

      <div class="card" style="width: 18rem;">
        <img src="<%= data[i].imageURL %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= data[i].itemType %></h5>
          <p class="card-text"><%= data[i].flavor %></p>
          <p class="card-text"><%= data[i].quantity %></p>
          <p class="card-text"><%= data[i].ingredients%></p>
          <a href="https://www.instagram.com/___bakedbym/" class="btn btn-primary">place order</a>
        </div>
      </div>


  <% } %>
     </div>
     </div>
    
